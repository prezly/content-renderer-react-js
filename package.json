{
    "name": "@prezly/content-renderer-react-js",
    "version": "0.5.0",
    "description": "Render Prezly Content Format documents with React.js",
    "license": "MIT",
    "main": "build/index.js",
    "types": "build/types/index.d.ts",
    "files": [
        "build",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/content-renderer-react-js.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/content-renderer-react-js/issues"
    },
    "homepage": "https://github.com/prezly/content-renderer-react-js#readme",
    "scripts": {
        "build": "NODE_ENV=production webpack",
        "build:esm": "gulp build:esm",
        "build:types": "tsc-fancy --preserveConsoleOutput --project .",
        "build:watch": "NODE_ENV=development webpack",
        "build:sass": "gulp build:sass",
        "watch:esm": "gulp watch:esm",
        "watch:types": "npm run build:types -- --watch --pretty",
        "watch:sass": "gulp watch:sass",
        "clean": "rimraf build/ node_modules/",
        "check": "npm run prettier && npm run test",
        "prettier": "prettier --check './**/*.(js|ts|tsx|scss)'",
        "prettier:fix": "npm run prettier -- --write --no-list-different",
        "release": "npm run release:prepare && npm run release:publish",
        "release:prepare": "npm run clean && npm install && npm run build && npm run check",
        "release:publish": "np",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --no-cache --watch"
    },
    "devEngines": {
        "node": ">=14",
        "npm": ">=7"
    },
    "workspaces": [
        "./",
        "./example"
    ],
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "@prezly/linear-partition": "^1.0.0",
        "@prezly/slate-types": "^0.10.1",
        "@react-hookz/web": "^12.0.0",
        "classnames": "^2.2.6",
        "react-modal": "^3.12.1",
        "shave": "^2.5.10",
        "slate": "^0.70.0",
        "striptags": "^3.1.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@babel/preset-react": "^7.16.5",
        "@babel/preset-typescript": "^7.16.5",
        "@dr.pogodin/babel-preset-svgr": "^1.4.0",
        "@svgr/webpack": "^5.5.0",
        "@types/classnames": "^2.2.11",
        "@types/jest": "^27.0.2",
        "@types/react": "^16.14.2",
        "@types/react-dom": "^17.0.11",
        "@types/react-modal": "^3.10.6",
        "@types/vinyl": "^2.0.6",
        "autoprefixer": "^10.4.0",
        "babel-plugin-add-import-extension": "^1.6.0",
        "babel-plugin-transform-remove-imports": "^1.7.0",
        "branch-pipe": "^1.0.1",
        "css-loader": "^5.0.1",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-filter": "^7.0.0",
        "gulp-map": "^0.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.0.0",
        "jest": "^27.3.1",
        "mini-css-extract-plugin": "^1.3.4",
        "np": "^7.5.0",
        "postcss": "^8.4.5",
        "prettier": "^2.4.1",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "rimraf": "^3.0.2",
        "sass": "^1.32.4",
        "sass-loader": "^10.1.1",
        "ts-jest": "^27.0.7",
        "ts-loader": "^8.0.14",
        "tsc-fancy": "^1.1.2",
        "typescript": "^4.4.4",
        "webpack": "^5.15.0",
        "webpack-cli": "^4.3.1"
    }
}
