{
    "name": "@prezly/content-renderer-react-js",
    "version": "0.3.0",
    "description": "Render Prezly Content Format documents with React.js",
    "license": "MIT",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "files": [
        "build",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/content-renderer-react-js.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/content-renderer-react-js/issues"
    },
    "homepage": "https://github.com/prezly/content-renderer-react-js#readme",
    "scripts": {
        "build": "NODE_ENV=production webpack",
        "build:watch": "NODE_ENV=development webpack",
        "clean": "rimraf build/ node_modules/",
        "check": "npm run prettier && npm run test",
        "prettier": "prettier --check './**/*.(js|ts|scss)'",
        "prettier:fix": "npm run prettier -- --write --no-list-different",
        "release": "npm run release:prepare && npm run release:publish",
        "release:prepare": "npm run clean && npm install && npm run bootstrap && npm run build && npm run check",
        "release:publish": "np",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --no-cache --watch"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "@prezly/linear-partition": "^1.0.0",
        "@prezly/slate-types": "^0.3.0",
        "classnames": "^2.2.6",
        "react-modal": "^3.12.1",
        "react-use": "^15.3.8",
        "shave": "^2.5.10",
        "slate": "^0.66.5",
        "striptags": "^3.1.1"
    },
    "devDependencies": {
        "@svgr/webpack": "^5.5.0",
        "@types/classnames": "^2.2.11",
        "@types/jest": "^27.0.2",
        "@types/react": "^16.14.2",
        "@types/react-dom": "^17.0.11",
        "@types/react-modal": "^3.10.6",
        "css-loader": "^5.0.1",
        "jest": "^27.3.1",
        "mini-css-extract-plugin": "^1.3.4",
        "np": "^7.5.0",
        "prettier": "^2.4.1",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "rimraf": "^3.0.2",
        "sass": "^1.32.4",
        "sass-loader": "^10.1.1",
        "ts-jest": "^27.0.7",
        "ts-loader": "^8.0.14",
        "typescript": "^4.4.4",
        "webpack": "^5.15.0",
        "webpack-cli": "^4.3.1"
    }
}
